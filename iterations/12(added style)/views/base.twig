		<![endif]-->
	
        <link rel="stylesheet" href="style.css" />
        <title>{% block title %}{% endblock %} - O&T</title>
    {% endblock %}
</head>
<body>

		<header class="header">
			<div class="top">
				<div class="container">
					<div class="left">
						<span>Welcome iNeed</span>
					</div> <!-- end .left -->
					<div class="right">
						<span class="item"><a href="tel:0012345678">00 1234 5678</a></span>
						<span class="item"><a href="mailto:info@ineed.com">info@ineed.com</a></span>
					</div> <!-- end .right -->
				</div> <!-- end .container -->
			</div> <!-- end .top -->
		</header> <!-- end .header -->

<div id="content">{% block content %}{% endblock %}</div>

<div id="footer">
    {% block footer %}
	
		<footer class="footer">
			<div class="container">
				<div class="row">
					<div class="col-sm-6">
						<h6>Created by the Orders & Transactions Team</h6>
					</div> <!-- end .col-sm-6 -->
					
					<div class="col-sm-6">
						<h6>Contact</h6>
						<p><a href="mailto:info@ineed.com">cse210-orders-transactions@googlegroups.com</a></p>
					</div> <!-- end .col-sm-6 -->
					
				</div> <!-- end .row -->
			</div> <!-- end .container -->
		</footer> <!-- end .footer -->
		
    {% endblock %}
	
		<!-- jQuery -->
		<script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
		<!-- Bootstrap -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
		<!-- google maps -->
		<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
		<!-- FlexSlider -->
		<script src="scripts/FlexSlider/jquery.flexslider-min.js"></script>
		<!-- Owl Carousel -->
		<script src="js/owl.carousel.min.js"></script>
		<!-- Nivo Lightbox -->
		<script src="scripts/Nivo-Lightbox/nivo-lightbox.min.js"></script>
		<!-- Isotope -->
		<script src="js/isotope.pkgd.min.js"></script>
		<script src="js/imagesloaded.pkgd.min.js"></script>
		<!-- Scripts.js -->
		<script src="js/scripts.js"></script>
</div>
</body>

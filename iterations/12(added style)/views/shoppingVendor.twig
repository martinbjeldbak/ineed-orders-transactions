{% extends 'base.twig' %}
{% block title %} Items {% endblock %}

{% block content %}

		<div class="page-title" style="background-image: url('images/background01.jpg');">
			<div class="inner">
				<div class="container">
					<div class="row aligned-cols">
						<div class="col-sm-3 aligned-middle">
							<h2>Vendor </h2>
						</div> <!-- end .col-sm-3 -->
						<div class="col-sm-9">
							<p>{{ vendor.name|title }}</p>
						</div> <!-- end .col-sm-9 -->
					</div> <!-- end .row -->
				</div> <!-- end .container -->
			</div> <!-- end .inner -->
		</div> <!-- end .page-title -->

    <!-- <h1>Vendor {{ vendor.name|title }}</h1> -->

		<div class="section white">
			<div class="inner">
				<div class="container">
					<div class="row">
					
						<div class="products">
							{% for item in vendor.getItems() %}
								
						<div class="col-sm-3">
							<div class="product">
								<div class="image">
									<img src="images/recipe1.jpg" alt="alt text here" class="img-responsive">
								</div> <!-- end .image -->
								
								<form method="post" action="{{ vendor.getID }}/cart_update">
									<h4>{{ item.name }}  <span class="price">${{ item.price }}</span></h4>
									<p>{{ item.desc }}</p>
									<p class="text-center"><input type="number" name="qty" min="1" value="1" /></p>
									<div class="button-wrapper"><button class="button">Add To Cart</button></div> 
									<input type="hidden" name="id" value="{{ item.getID() }}" />
									<input type="hidden" name="type" value="add"/>
								</form>
								
							</div> <!-- end .specialty -->
						</div> <!-- end .col-sm-3 -->
						
							{% endfor %}
						</div>
						
					</div> <!-- end .row -->
				</div> <!-- end .container -->
			</div> <!-- end .inner -->
		</div> <!-- end .section -->

<div class="section dark transparent parallax" style="background-image: url('images/background02.jpg');">
	<div class="inner">
		<div class="container">
			<div class="shopping-cart">
				<h2>Cart</h2>

				{% if products|length > 0 %}
					<ol>
						{% set total = 0.0 %}
						{% for item in products %}
							{% if item|length > 0 %}
								<li><form method="post" action="{{ vendor.getID() }}/cart_update">
										<input type="hidden" name="type" value="remove"/>
										<input type="hidden" name="id" value="{{ item.id }}" />
										<button class="button">{{ item.name }} &times;</button>
									</form>
								</li>
								{% set total = total + (item.price * item.qty) %}
							{% endif %}
						{% endfor %}
					</ol>
					<span>Total: ${{ total }} <a href="{{ vendor.getID() }}/view_cart">Check out</a></span>
					<form method="post" action="{{ vendor.getID }}/cart_update">
						<button class="button brown">Empty cart</button>
						<input type="hidden" name="emptycart" value="1"/>
					</form>
				{% endif %}
			</div>
		</div> <!-- end .container -->
	</div> <!-- end .inner -->
</div> <!-- end .section -->
	
		<div class="section small text-center dark transparent parallax" style="background-image: url('images/background02.jpg');">
			<div class="inner">
				<div class="container">
					<div class="call-to-action">
						<h3>Thank you</h3>
					</div> <!-- end .call-to-action -->
				</div> <!-- end .container -->
			</div> <!-- end .inner -->
		</div> <!-- end .section -->
	
{% endblock %}